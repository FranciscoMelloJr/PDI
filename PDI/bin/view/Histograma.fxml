<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.HistogramaController">
   <children>
      <BorderPane layoutY="-1.0" prefHeight="500.0" prefWidth="400.0">
         <top>
            <Label prefHeight="0.0" prefWidth="139.0" text="Histogramas" BorderPane.alignment="CENTER">
               <font>
                  <Font name="ROGFonts-Regular" size="15.0" />
               </font>
               <BorderPane.margin>
                  <Insets top="20.0" />
               </BorderPane.margin>
            </Label>
         </top>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <BarChart fx:id="grafico1" legendSide="TOP" title="Imagem 1" titleSide="BOTTOM">
                    <xAxis>
                      <CategoryAxis />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </BarChart>
                  <BarChart fx:id="grafico2" legendSide="TOP" prefHeight="81.0" prefWidth="300.0" title="Imagem 2" titleSide="BOTTOM">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </BarChart>
                  <BarChart fx:id="grafico3" legendSide="TOP" prefHeight="90.0" prefWidth="300.0" title="Imagem 3" titleSide="BOTTOM">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </BarChart>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
